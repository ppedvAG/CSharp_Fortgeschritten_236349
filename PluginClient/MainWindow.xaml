<Window x:Class="PluginClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PluginClient" Height="450" Width="800"
		WindowStartupLocation="CenterScreen"
		FontSize="24">
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="InfoText" TextWrapping="Wrap"/>
		<Button Grid.Row="1" Content="Plugin laden" Grid.ColumnSpan="2"
				Click="Button_Click"/>
		<StackPanel x:Name="MethodenPanel" Grid.Column="1"/>
	</Grid>
</Window>
